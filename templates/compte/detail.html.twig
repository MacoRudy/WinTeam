{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} Compte Utilisateur {% endblock %}

{% block main %}

    <h1 class="text-center">Compte de {{ account.pseudo }}</h1>

    {% for label, messages in app.flashes(['success', 'error']) %}
        {% for message in messages %}
            <p class="alert-{{ label }}">{{ message }}</p>
        {% endfor %}
    {% endfor %}

    <div class="row">

        <div class="col-sm-4"> <!--colone de gauche-->
            <div class="card">
                <div class="card-body">
                    <img class="profil-picture"
                         src="{{ asset('images/profilePicture/'~app.user.photoName) }}"
                         alt="La photo de profil">
                </div>
            </div>
        </div>


        <div class="col-sm-8"> <!--colone de droite-->
            <div class="card">
                <div class="card-body">

                    <div class="form-group row">
                        <p>Prénom : {{ account.prenom }}</p>
                    </div>

                    <div class="form-group row">
                        <p>Nom : {{ account.nom }}</p>
                    </div>

                    <div class="form-group row">
                        <p>Téléphone : {{ account.telephone }}</p>
                    </div>

                    <div class="form-group row">
                        <p>Email : {{ account.email }}</p>
                    </div>

                    <div class="form-group row">
                        <p>Campus : {{ account.campus.getNomCampus() }}</p>
                    </div>

                </div>
            </div>
        </div>


    </div>

    <a href="{{ path('edit', {'id': account.id})  }}" class="btn btn-secondary btn-lg active" role="button" aria-pressed="true" value="edit">Modifier profil</a>
