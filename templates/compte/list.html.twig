{% extends 'base.html.twig' %}

{% block accueilCarouselCss %}
    <link rel="stylesheet" href="{{ asset('CSS/listeAdmin.css') }}">
{% endblock %}

{% block title %}{{ parent() }}{% endblock %}

{% block main %}
    <h1 class="text-center" id="utilisateurs">Les utilisateurs</h1>
    <div class="row">
        {% for accounts in account %}
            <div class="d-flex justify-content-around col-4">
                <div class="cardUtilisateur">
                    <div class="photo"></div>
                    <h3 class="text-center align-middle userPseudo">{{ accounts.pseudo | capitalize }}</h3>
                    <p class="voir align-bottom text-center"><a id="nono" href="{{ path('detail', {'id': accounts.id}) }}"
                                                                title="{{ accounts.pseudo }}">Voir le profil</a></p>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}