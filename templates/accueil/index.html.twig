{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} | Accueil!{% endblock %}

{% block main %}

    <h2>Filtrer les sorties</h2>


    <form method="get">

        <div class="row">

            <div class="col-7">

                <div class="form-group row ">
                    <label for="inputState" class="col-sm-5 col-form-label">Campus :</label>
                    <div class="col-sm-6">
                        <select id="inputState" class="form-control">
                            <option selected>Villes</option>
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                        </select>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="inputPassword" class="col-sm-5 col-form-label">Le nom de la sortie contient :</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" id="inputRecherche" placeholder="Recherche">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="inputPassword" class="col-1 col-form-label">Entre :</label>
                    <div class="col-3">
                        <input type="date" class="form-control" id="inputPassword">
                    </div>
                    <label for="inputPassword" class="col-1 col-form-label">Et :</label>
                    <div class="col-3">
                        <input type="date" class="form-control" id="inputPassword">
                    </div>
                </div>

            </div>

            <div class="col-3 my-auto">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="option1">
                    <label class="form-check-label" for="inlineCheckbox1">Sorties dont je suis l'organisateur/trice</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="option1">
                    <label class="form-check-label" for="inlineCheckbox1">Sorties auxquelles je suis inscrit/e</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="option1">
                    <label class="form-check-label" for="inlineCheckbox1">Sorties auxquelles je ne suis pas inscrit/e</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="option1">
                    <label class="form-check-label" for="inlineCheckbox1">Sorties passées</label>
                </div>
            </div>

            <div class="col-2 my-auto">
                <button type="submit" class="btn btn-primary mb-2">Rechercher</button>
            </div>
        </div>

    </form>

    <div>
        <table class="table table-striped">

            <thead>
            <tr>
                <th scope="col">Nom de la sortie</th>
                <th scope="col">Date de la sortie</th>
                <th scope="col">Clôture</th>
                <th scope="col">inscrits/places</th>
                <th scope="col">Etat</th>
                <th scope="col">Inscrit</th>
                <th scope="col">Organisateur</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>

            <tbody>
            {% for sortie in sorties%}
                <tr>
                    <td>{{ sortie.nom }}</td>
                    <td>{{ sortie.datedebut|date("d/m/Y") }}</td>
                    <td>{{ sortie.datecloture|date("d/m/Y") }}</td>
                    <td>{{ sortie.nbinscriptionsmax }}</td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
            {% endfor %}
            </tbody>

            <tfoot>
            <tr>
                <td><button type="submit" class="btn btn-primary mb-2">Créer une sortie</button></td>
            </tr>
            </tfoot>

        </table>
    </div>

{% endblock %}
