{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} Accueil!{% endblock %}

{% block main %}

    <h2>Filtrer les sorties</h2>


    <form method="get">

        <div class="row">

            <div class="col-7">

                <div class="form-group row ">
                    {{ form_label(accueilForm.villes) }}
                    <div class="col-sm-6">
                        {{ form_widget(accueilForm.villes) }}
                    </div>
                </div>

                <div class="form-group row">
                    <label for="inputRecherche" class="col-sm-5 col-form-label">Le nom de la sortie contient :</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" id="inputRecherche" placeholder="Recherche">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="inputPassword" class="col-1 col-form-label">Entre :</label>
                    <div class="col-3">
                        <input type="date" class="form-control" id="inputPassword">
                    </div>
                    <label for="inputPassword" class="col-1 col-form-label">Et :</label>
                    <div class="col-3">
                        <input type="date" class="form-control" id="inputPassword">
                    </div>
                </div>

            </div>

            <div class="col-3 my-auto">
                <div class="form-check">
                    {{ form_widget(accueilForm.organisateur) }}
                    {{ form_label(accueilForm.organisateur) }}
                </div>
                <div class="form-check">
                    {{ form_widget(accueilForm.inscrit) }}
                    {{ form_label(accueilForm.inscrit) }}

                </div>
                <div class="form-check">
                    {{ form_widget(accueilForm.nonInscrit) }}
                    {{ form_label(accueilForm.nonInscrit) }}
                </div>
                <div class="form-check">
                    {{ form_widget(accueilForm.sortiesPassees) }}
                    {{ form_label(accueilForm.sortiesPassees) }}

                </div>
            </div>

            <div class="col-2 my-auto">
                <button type="submit" class="btn btn-primary mb-2">Rechercher</button>
            </div>
        </div>

    </form>

    <div>
        <table class="table table-striped">

            <thead>
            <tr>
                <th scope="col">Nom de la sortie</th>
                <th scope="col">Date de la sortie</th>
                <th scope="col">Clôture</th>
                <th scope="col">inscrits/places</th>
                <th scope="col">Etat</th>
                <th scope="col">Inscrit</th>
                <th scope="col">Organisateur</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>

            <tbody>
            {% for sortie in sorties %}

                <tr>
                    <td>{{ sortie.nom }}</td>
                    <td>{{ sortie.datedebut|date("d/m/Y") }}</td>
                    <td>{{ sortie.datecloture|date("d/m/Y") }}</td>
                    <td> {{ sortie.sortieUser.count}} / {{ sortie.nbinscriptionsmax }}</td>
                    <td>{{ sortie.etat.libelle }}</td>
                    <td>
                        {% for participant in inscriptions %}
                            {% if (participant.user == app.user) and (participant.sortie == sortie) %}
                                X
                            {% endif %}
                        {% endfor %}
                    </td>
                    {{ dump(sortie.organisateur) }}
                    <td> <a href="{{ path('detail', {'id': sortie.organisateur.id}) }}">{{ sortie.organisateur.prenom|capitalize }} {{ sortie.organisateur.nom|first|capitalize }}.</a></td>


                    PARTIE ACTIONS

                     Si il y a encore de la place dans l'activité alors ou peut s'inscrire si l'état le permet
                    {% if (app.user.roles != ["ROLE_USER"]) %}

                        {% if sortie.etat.id == 1 %}
                            <td><a href="{{ path('modification_sortie', {'id': sortie.id}) }}">Modifier</a> -
                                <a href="{{ path('publier', {'id': sortie.id}) }}">Publier</a>
                            </td>
                        {% endif %}

                        {% if sortie.etat.id == 2 %}
                            <td><a href="{{ path('affichage_sortie', {'id': sortie.id}) }}">Afficher</a>
                            {% for participant in inscriptions %}
                                {% if (participant.user != app.user) and (participant.sortie == sortie) %}
                                    - <a href="{{ path('inscrire', {'id': sortie.id}) }}">S'inscrire</a></td>
                                {% elseif (participant.user == app.user) and (participant.sortie == sortie) %}
                                    - <a href="{{ path('annulation_sortie', {'id': sortie.id}) }}">Annuler</a></td>
                                {% endif %}
                            {% endfor %}
                        {% endif %}

                        {% if sortie.etat.id == 3 %}
                            <td><a href="{{ path('affichage_sortie', {'id': sortie.id}) }}">Afficher</a>
                            {% for participant in inscriptions %}
                                {% if (participant.user == app.user) and (participant.sortie == sortie) %}
                                    - <a href="{{ path('desister', {'id': sortie.id}) }}">Se désister</a>
                                    </td>
                                {% endif %}
                            {% endfor %}
                        {% endif %}

                        {% if sortie.etat.id == 4 %}
                            <td><a href="{{ path('affichage_sortie', {'id': sortie.id}) }}">Afficher</a></td>
                        {% endif %}

                        Si plus de place, alors la personne ne peut qu'afficher la sortie
                    {% else %}

                        <td><a href="{{ path('affichage_sortie', {'id': sortie.id}) }}">Afficher</a></td>

                    {% endif %}

                </tr>

            {% endfor %}

            </tbody>

            <tfoot>
            <tr>
                {% if app.user.roles == ["ROLE_ORGANISATEUR"] or app.user.roles == ["ROLE_ADMIN"] %}
                    <td><a href="{{ path('creation_sortie') }}"><button type="submit" class="btn btn-primary mb-2">Créer une sortie</button></a></td>
                {% endif %}
            </tr>
            </tfoot>

        </table>
    </div>

{% endblock %}
