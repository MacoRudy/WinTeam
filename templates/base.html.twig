<!doctype html>
<html lang="fr">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <!-- Css -->
    <link rel="stylesheet" href="{{ asset('CSS/style.css') }}">
    {% block accueilCss %}{% endblock %}
    {% block accueilCarouselCss %}{% endblock %}
    {% block connexionCss %}{% endblock %}
    {% block listeAdminCss %}{% endblock %}
    <!-- Font -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">

    <title>{% block title %} Sortir | {% endblock %}</title>
</head>
<body>

<div class="d-flex" id="wrapper">

    <!-- Sidebar -->
    <div class="d-none d-lg-block" id="sidebar-wrapper">
        <div class="sidebar-heading text-center">SORTIR.COM</div>
        <div class="list-group list-group-flush">
            <ul class="navbar-nav">
                <li class="nav-item">
                    {% if app.user %}
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('accueil') }}">Accueil <span class="sr-only">(current)</span></a>
                </li>
                <hr>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_logout') }}" title="Disconnect">Se déconnecter</a>
                </li>
                <hr>
                {% if (is_granted("ROLE_ADMIN")) %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('compte') }}">Tous les profils</a>
                    </li>
                    <hr>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('detail', {'id': app.user.id}) }}">Mon profil</a>
                    </li>
                    <hr>
                {% endif %}
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_register') }}" title="register">Enregistrer un utilisateur</a>
                    </li>
                    <hr>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_login') }}" title="Connect">Se Connecter</a>
                    </li>
                    <hr>
                {% endif %}
                </li>
                {% if (is_granted("ROLE_ADMIN")) %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('cities_villes') }}" title="ville">Ville</a>
                    </li>
                    <hr>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('cities_campus') }}" title="campus">Campus</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
    <!-- /#sidebar-wrapper -->

    <!-- Page Content -->
    <div id="page-content-wrapper">

        <nav class="navbar navbar-expand-lg navbar-light border-bottom d-lg-none">
            <div class="sidebar-heading text-center">SORTIR.COM</div>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        {% if app.user %}
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('accueil') }}">Accueil <span class="sr-only">(current)</span></a>
                    </li>
                    <hr>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_logout') }}" title="Disconnect">Se déconnecter</a>
                    </li>
                    <hr>
                    {% if (is_granted("ROLE_ADMIN")) %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('compte') }}">Tous les profils</a>
                        </li>
                        <hr>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('detail', {'id': app.user.id}) }}">Mon profil</a>
                        </li>
                        <hr>
                    {% endif %}
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_register') }}" title="register">Enregistrer un utilisateur</a>
                        </li>
                        <hr>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_login') }}" title="Connect">Se Connecter</a>
                        </li>
                        <hr>
                    {% endif %}
                    </li>
                    {% if (is_granted("ROLE_ADMIN")) %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('cities_villes') }}" title="ville">Ville</a>
                        </li>
                        <hr>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('cities_campus') }}" title="campus">Campus</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </nav>

        <div class="container-fluid">
            <main>
                <div class="box container-fluid">
                    {% block main %}{% endblock %}
                </div>
            </main>

            <footer></footer>
        </div>
    </div>
    <!-- /#page-content-wrapper -->

</div>
<!-- /#wrapper -->
<!-- Optional JavaScript -->
{% block javascripts %}{% endblock %}

<!-- jQuery first, then Popper.js, then Bootstrap JS -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
</body>
</html>
