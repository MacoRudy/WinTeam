{% extends 'base.html.twig' %}

{% block accueilCarouselCss %}
    <link rel="stylesheet" href="{{ asset('CSS/formRegistration.css') }}">
{% endblock %}

{% block title %} {{ parent() }} Enregistrer un compte {% endblock %}

{% block main %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

<div class="container">

    <h1 class="text-center content-profil">Enregistrement</h1>

    <div class="d-flex justify-content-around row">

        <div class="col-sm-8 col-lg-6 card">

            {{ form_start(registrationForm) }}

            <div class="form-group row">
                {{ form_label(registrationForm.pseudo) }}
                <div class="col-sm-12 col-lg-8">
                    {{ form_widget(registrationForm.pseudo) }}
                </div>
            </div>

            <div class="form-group row">
                {{ form_label(registrationForm.prenom) }}
                <div class="col-sm-12 col-lg-8">
                    {{ form_widget(registrationForm.prenom) }}
                </div>
            </div>

            <div class="form-group row">
                {{ form_label(registrationForm.nom) }}
                <div class="col-sm-12 col-lg-8">
                    {{ form_widget(registrationForm.nom) }}
                </div>
            </div>

            <div class="form-group row">
                {{ form_label(registrationForm.telephone) }}
                <div class="col-sm-12 col-lg-8">
                    {{ form_widget(registrationForm.telephone) }}
                </div>
            </div>

            <div class="form-group row">
                {{ form_label(registrationForm.email) }}
                <div class="col-sm-12 col-lg-8">
                    {{ form_widget(registrationForm.email) }}
                </div>
            </div>

            <div class="form-group row">
                {{ form_label(registrationForm.campus) }}
                <div class="col-sm-12 col-lg-8">
                    {{ form_widget(registrationForm.campus) }}
                </div>
            </div>

            <div class="form-group row">
                {{ form_label(registrationForm.roles) }}
                <div class="col-sm-12 col-lg-8">
                    {{ form_widget(registrationForm.roles) }}
                </div>
            </div>

            <div class="form-group row">
                {{ form_label(registrationForm.actif) }}
                <div class="col-sm-12 col-lg-8">
                    {{ form_widget(registrationForm.actif) }}
                </div>
            </div>

            <div class="form-group row">
                {{ form_label(registrationForm.plainPassword.first) }}
                <div class="col-sm-12 col-lg-8">
                    {{ form_widget(registrationForm.plainPassword.first) }}
                </div>
            </div>

            <div class="form-group row">
                {{ form_label(registrationForm.plainPassword.second) }}
                <div class="col-sm-12 col-lg-8">
                    {{ form_widget(registrationForm.plainPassword.second) }}
                </div>
            </div>

        </div>

    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-orange">Enregistrer</button>
    </div>

    {{ form_rest(registrationForm) }}

    {{ form_end(registrationForm) }}


</div>
{% endblock %}
