{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} Annuler une sortie{% endblock %}

{% block annulationSortieCss %}
    <link rel="stylesheet" href="{{ asset('CSS/annulation.css') }}">
{% endblock %}

{% block main %}

    <h2 class="text-center content-annulation mt-5 mb-5 ">Annulation de sorties</h2>

        {{ form_start(annulationSortieForm) }}

    <div class="row">

        <div class="mx-auto col-sm-10 col-lg-6 card">
            <ul>
                <li>Nom de la sortie : {{ sortie.nom }}</li>
                <li>Date de la sortie : {{ sortie.datedebut | date("d/m/Y") }}</li>
                <li>Campus : {{ sortie.campus.nomCampus }}</li>
                <li>Lieu: {{ sortie.noLieu.nomLieu }} {{ sortie.noLieu.rue }} {{ sortie.noLieu.ville.codePostal }} {{ sortie.noLieu.ville.nomVille }}</li>
                <li>Motif : {{ form_row(annulationSortieForm.motifAnnulation) }}</li>
            </ul>

            <div class="d-inline mx-auto">
                <button type="submit" class="btn btn-orange" name="enregistrer" value="enregistrer">Enregistrer</button>
                <button type="submit" class="btn btn-orange" name="annuler" value="annuler">Annuler</button>
            </div>
        </div>

    </div>

        {{ form_end(annulationSortieForm) }}


{% endblock %}